{% extends 'base.html.twig' %}

{% block title %}{{ comic.title }} | {{ site.title }}{% endblock %}
{% block head_meta %}
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:title" content="{{ comic.title }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:image" content="{{ meta.image }}">
    <meta property="og:description" content="{{ comic.description }}">
    <meta property="article:author" content="{{ meta.author[0].url }}">
    <meta name="description" content="{{ comic.description }}">
    <script type="application/ld+json">{{ meta|json_encode|raw }}</script>
{% endblock %}

{% block body %}
    <div class="row align-items-center">
        <div class="col-xs-12 col-md-6">
            <h1 class="h4" name="comic" id="comic">{{ comic.title }}</h1>
        </div>
        <div class="d-none d-md-block col-md-6 text-end">
            {{ block('comic_pagination') }}
        </div>
    </div>
    <div class="row mt-3 mb-3">
        {% for panel in comic.panels %}
            <img src="{{ panel.sourcePath }}" alt="{{ panel.alt }}"/>
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-6">
            {% if hidden_panel %}
                <a href="{{ hidden_panel.sourcePath }}" type="button" class="btn btn-success" data-bs-toggle="modal"
                   data-bs-target="#secret-panel">
                    <span class="bi bi-exclamation-diamond-fill"></span>
                </a>
                <div class="modal modal-lg fade" id="secret-panel" tabindex="-1" aria-labelledby="secret-panel-label"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="secret-panel-label">Super Secret Panel!</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <img src="{{ hidden_panel.sourcePath }}" alt="{{ hidden_panel.alt }}"
                                     class="img-fluid"/>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <button class="btn btn-success secret-panel disabled">
                    <span class="bi bi-exclamation-diamond-fill"></span>
                </button>
            {% endif %}
        </div>
        <div class="col-6 text-end">
            {{ block('comic_pagination') }}
        </div>
    </div>
    {% if comic.commentary %}
        <div class="row comic-commentary">
            {% if comic.isSafe %}
                {{ comic.commentary|raw }}
            {% else %}
                {{ comic.commentary|markdown_to_html }}
            {% endif %}
        </div>
    {% endif %}
{% endblock %}

{% block comic_pagination %}
    <div class="btn-group" role="pagination" aria-label="Pagination">
        {% if (previous_comic) %}
            <a type="button" class="btn btn-primary"
               href="{{ path('comic_item', {slug: header_navigation.first}) }}">
                <span class="d-none d-md-inline">First</span>
                <span class="d-inline d-md-none">&laquo;&laquo;</span>
            </a>
            <a type="button" class="btn btn-primary" href="{{ path('comic_item', {slug: previous_comic}) }}">
                <span class="d-none d-md-inline">Previous</span>
                <span class="d-inline d-md-none">&laquo;</span>
            </a>
        {% else %}
            <button type="button" class="btn btn-primary disabled">
                <span class="d-none d-md-inline">First</span>
                <span class="d-inline d-md-none">&laquo;&laquo;</span>
            </button>
            <button type="button" class="btn btn-primary disabled">
                <span class="d-none d-md-inline">Previous</span>
                <span class="d-inline d-md-none">&laquo;</span>
            </button>
        {% endif %}
        {% if next_comic %}
            <a type="button" class="btn btn-primary" href="{{ path('comic_item', {slug: next_comic}) }}">
                <span class="d-none d-md-inline">Next</span>
                <span class="d-inline d-md-none">&raquo;</span>
            </a>
            <a type="button" class="btn btn-primary"
               href="{{ path('comic_item', {slug: header_navigation.current}) }}">
                <span class="d-none d-md-inline">Current</span>
                <span class="d-inline d-md-none">&raquo;&raquo;</span>
            </a>
        {% else %}
            <button type="button" class="btn btn-primary disabled">
                <span class="d-none d-md-inline">Next</span>
                <span class="d-inline d-md-none">&raquo;</span>
            </button>
            <button type="button" class="btn btn-primary disabled">
                <span class="d-none d-md-inline">Current</span>
                <span class="d-inline d-md-none">&raquo;&raquo;</span>
            </button>
        {% endif %}
    </div>
{% endblock %}
