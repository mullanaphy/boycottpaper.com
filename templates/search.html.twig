{% extends 'base.html.twig' %}

{% block title %}{{ page.title|striptags }} | {{ site.title }}{% endblock %}

{% block body %}
    <div class="row">
        {% for item in collection %}
            <div class="col-xs-12 col-md-3 mb-3">
                <div class="card">
                    <!-- Score: {{ (item.score)|format_percent_number({fraction_digit: 2}) }} -->
                    {% if item.image %}
                        <a href="{{ path(item.path, item.identity) }}#comic">
                            <img src="{{ item.image }}" alt="{{ item.title }}"
                                 class="card-img-top">
                        </a>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ item.title }}</h5>
                        <p class="card-text">{{ item.description }}</p>
                        <a href="{{ path(item.path, item.identity) }}" class="btn btn-md btn-primary">View
                            {{ item.type|capitalize }}</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <div class="alert alert-warning"><em>No results found</em></div>
            </div>
        {% endfor %}
    </div>
    <div class="row align-items-center">
        <div class="col-sm-6 d-none d-sm-block">Page <strong>{{ pageId }}</strong> of <strong>{{ pages }}</strong></div>
        <div class="col-sm-6 col-xs-12 text-end">
            <div class="btn-group" role="pagination" aria-label="Pagination">
                {% if pageId > 1 %}
                    <a type="button" class="btn btn-primary"
                       href="{{ path(page.url, page.parameters|merge({pageId: 1, limit: limit})) }}">
                        <span class="d-none d-md-inline">First</span>
                        <span class="d-inline d-md-none">&laquo;&laquo;</span>
                    </a>
                    <a type="button" class="btn btn-primary"
                       href="{{ path(page.url, page.parameters|merge({pageId: pageId - 1, limit: limit})) }}">
                        <span class="d-none d-md-inline">Previous</span>
                        <span class="d-inline d-md-none">&laquo;</span>
                    </a>
                {% else %}
                    <button type="button" class="btn btn-primary disabled">
                        <span class="d-none d-md-inline">First</span>
                        <span class="d-inline d-md-none">&laquo;&laquo;</span>
                    </button>
                    <button type="button" class="btn btn-primary disabled">
                        <span class="d-none d-md-inline">Previous</span>
                        <span class="d-inline d-md-none">&laquo;</span>
                    </button>
                {% endif %}
                {% for neighbor in neighbors %}
                    {% if neighbor != pageId %}
                        <a type="button" class="btn btn-primary"
                           href="{{ path(page.url, page.parameters|merge({pageId: neighbor, limit: limit})) }}">{{ neighbor }}</a>
                    {% else %}
                        <button type="button" class="btn btn-primary disabled">{{ neighbor }}</button>
                    {% endif %}
                {% endfor %}
                {% if pageId < pages %}
                    <a type="button" class="btn btn-primary"
                       href="{{ path(page.url, page.parameters|merge({pageId: pageId +1, limit: limit})) }}">
                        <span class="d-none d-md-inline">Next</span>
                        <span class="d-inline d-md-none">&raquo;</span>
                    </a>
                    <a type="button" class="btn btn-primary"
                       href="{{ path(page.url, page.parameters|merge({pageId: pages, limit: limit})) }}">
                        <span class="d-none d-md-inline">Last</span>
                        <span class="d-inline d-md-none">&raquo;&raquo;</span>
                    </a>
                {% else %}
                    <button type="button" class="btn btn-primary disabled">
                        <span class="d-none d-md-inline">Next</span>
                        <span class="d-inline d-md-none">&raquo;</span>
                    </button>
                    <button type="button" class="btn btn-primary disabled">
                        <span class="d-none d-md-inline">Last</span>
                        <span class="d-inline d-md-none">&raquo;&raquo;</span>
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
